# Environment variables for the DRM Dashboard

# Database configuration (if using a database)
DATABASE_URL=sqlite:///data/drm_dashboard.db

# API Keys (add your actual keys here)
WORLD_BANK_API_KEY=your_world_bank_api_key_here
EMDAT_API_KEY=your_emdat_api_key_here

# Dashboard configuration
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=True

# Data update intervals (in seconds)
DATA_UPDATE_INTERVAL=3600

# File upload settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_FOLDER=data/uploads

# Logging level
LOG_LEVEL=INFO

# External data URLs
NATURAL_EARTH_URL=https://www.naturalearthdata.com/http//www.naturalearthdata.com/download/
WORLD_BANK_API_URL=https://api.worldbank.org/v2/